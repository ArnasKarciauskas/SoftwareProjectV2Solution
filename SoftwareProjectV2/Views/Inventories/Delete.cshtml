@model SoftwareProjectV2.Models.Inventory

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h5>Are you sure you want to delete this inventory item?</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InvDeviceName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvDeviceName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InvDeviceType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvDeviceType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InvSerialNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvSerialNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WarrantyExpiration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WarrantyExpiration)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="InventoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Return to inventory</a>
    </form>
</div>
