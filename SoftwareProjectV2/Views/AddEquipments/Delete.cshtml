@model SoftwareProjectV2.Models.AddEquipment

@{
    ViewData["Title"] = "Delete";
}


<div>
    <h5>Are you sure you want to delete this equipment entry?</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeviceName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeviceName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeviceType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeviceType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssignedTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssignedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EquipmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Return to assigned equipment list</a>
    </form>
</div>
